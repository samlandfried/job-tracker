<h1>Job Tracker Dashboard</h1>

<h3>Jobs by Level of Interest</h3>

<table class="jobs-by-level-of-interest">
  <tr>
    <th>Level of Interest</th>
    <th>Number of Jobs</th>
  </tr>
  <% @dashboard.number_of_jobs_by_level_of_interest.each do |interest, count| %>
  <tr>
    <td><%= interest %></td>
    <td><%= count %></td>
  </tr>
  <% end %>
</table>

<h3>Companies with the Most Interest</h3>
<table class="companies-with-most-interest">
  <tr>
    <th>Rank</th>
    <th>Company</th>
    <th>Average Level of Interest</th>
  </tr>
<% @dashboard.companies_with_most_interest(3).each_with_index do |tuple, i| %>
  <tr>
    <td><%= i + 1 %></td>
    <td><%= link_to tuple.first.name, company_path(tuple.first) %></td>
    <td><%= tuple.last %></td>
  </tr>
  <% end %>
</table>

<h3>Locations with the Most Jobs</h3>

<table class="jobs-by-location">
  <tr>
    <th>Location</th>
    <th>Number of Jobs</th>
  </tr>
  <% @dashboard.number_of_jobs_by_city.each do |city, count| %>
  <tr>
    <td><%= link_to city, jobs_path + "?location=#{city}" %></td>
    <td><%= count %></td>
  </tr>
  <% end %>
</table>