<h1><%= @category.title %> Jobs</h1>
<%= button_to "Edit #{@category.title} Category", edit_category_path(@category), method: 'get' %>
<%= button_to "Delete #{@category.title} Category", category_path(@category), method: 'delete' %>
<ul>
  <% @category.jobs.each do |job| %>
  <li>
    <%= link_to job.title, job_path(job) %>
  </li>
  <% end %>
</ul>

<%= button_to "Back to All Categories", categories_path, method: 'get' %>